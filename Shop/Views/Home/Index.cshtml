@model Shop.Models.ViewModels.HomeVM

<div class="container">
    <div class="text-center">
        <button class="btn btn-success">All</button>
        @foreach (var item in Model.Categories)
        {
            <button class="btn btn-success">@item.Name</button>
        }
    </div>
    <br />
    <div class="row">
        @foreach(var item in Model.Products)
         {
            <partial name="_productCard" model="item" />
         }
    </div>
</div>